<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<window xmlns="http://schemas.haulmont.com/cuba/window.xsd"
        caption="msg://editorCaption"
        class="com.galua.autodealer.web.legalperson.LegalPersonEdit"
        datasource="legalPersonDs"
        focusComponent="fieldGroup"
        messagesPack="com.galua.autodealer.web.legalperson">
    <dsContext>
        <datasource id="legalPersonDs"
                    class="com.galua.autodealer.entity.LegalPerson"
                    view="_local"/>
    </dsContext>
    <dialogMode height="600"
                width="800"/>
    <layout expand="windowActions"
            spacing="true">
        <fieldGroup id="fieldGroup"
                    datasource="legalPersonDs">
            <column width="250px">
                <field property="name"/>
                <field property="tin"/>
                <field property="address"
                       rows="5"/>
                <field property="phone"/>
            </column>
        </fieldGroup>
        <frame id="windowActions"
               screen="editWindowActions"/>
    </layout>
</window>
